<div class="devise-container">
  <div class="devise-card">
    <div class="devise-logo">
      <%= image_tag "vega-logo.png", alt: "Vega Tools" %>
      <div class="devise-logo-text">Vega Tools</div>
    </div>

    <h1 class="devise-title">Reset Password</h1>
    <p class="devise-subtitle">Enter your email to receive reset instructions</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com" %>
      </div>

      <div class="actions">
        <%= f.submit "Send Reset Instructions" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= link_to "Back to sign in", new_session_path(resource_name) %>
    </div>
  </div>
</div>
