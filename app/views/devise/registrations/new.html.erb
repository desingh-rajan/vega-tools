<div class="devise-container">
  <div class="devise-card">
    <div class="devise-logo">
      <%= image_tag "vega-logo.png", alt: "Vega Tools" %>
      <div class="devise-logo-text">Vega Tools</div>
    </div>

    <h1 class="devise-title">Create Account</h1>
    <p class="devise-subtitle">Join us to explore premium tools</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a password" %>
        <% if @minimum_password_length %>
          <p class="password-hint"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password" %>
      </div>

      <div class="actions">
        <%= f.submit "Create Account" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= link_to "Already have an account? Sign in", new_session_path(resource_name) %>
    </div>
  </div>
</div>
